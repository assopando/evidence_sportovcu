            selectHTML += '</select><a href="#" class="odebrat">Odebrat</a></div>';
            $(wrapper).append(selectHTML);
        } else {
            alert('Maximalně 10 disciplín');
        }
    });

    $(document).on("click", ".odebrat", function(e) {
        e.preventDefault();
        $(this).parent('div').remove();
        pocet--;
    });
